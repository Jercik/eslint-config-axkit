{
  "name": "eslint-config-axkit",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Reusable ESLint flat config for TypeScript + Node.js projects with strict type checking, Prettier, Unicorn, and Vitest",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jercik/eslint-config-axkit.git"
  },
  "homepage": "https://github.com/Jercik/eslint-config-axkit#readme",
  "bugs": {
    "url": "https://github.com/Jercik/eslint-config-axkit/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "prepublishOnly": "pnpm run rebuild",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fta": "fta-check",
    "knip": "knip",
    "lint": "eslint",
    "rebuild": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -b --noEmit"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "flat-config",
    "typescript",
    "prettier",
    "unicorn",
    "vitest",
    "axkit"
  ],
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=22.14.0"
  },
  "peerDependencies": {
    "eslint": ">=9"
  },
  "dependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "typescript-eslint": "^8.53.0"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "fta-check": "^1.5.1",
    "fta-cli": "^3.0.0",
    "knip": "^5.81.0",
    "prettier": "3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
